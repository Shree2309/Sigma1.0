<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/input_bg"
    android:layout_marginBottom="10dp"
    android:layout_marginHorizontal="3dp"
    android:padding="3dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SELL X 1300"
                    android:textColor="@color/white"
                    android:background="@color/black"
                    android:id="@+id/tvAction"
                    android:layout_marginHorizontal="10dp"
                    android:padding="2dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MARKET"
                    android:textColor="@color/white"
                    android:id="@+id/tvTag"
                    android:background="@color/black"
                    android:padding="2dp"
                    />

    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LT"
            android:textStyle="bold"
            android:id="@+id/tvName"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="29-MAR-2023"
            android:textStyle="bold"
            android:id="@+id/tvDate"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sold by Trader"
            android:id="@+id/tvSb"

            android:layout_marginStart="10dp"
            android:textColor="@color/ink"
            android:padding="3dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Margin used "
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5558"
                android:id="@+id/tvMargin"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2023-03-02"
                android:textColor="@color/black"
                android:id="@+id/tvCurrentDate"
                android:layout_marginHorizontal="10dp"
                android:padding="2dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:19:09"
                android:id="@+id/tvCurrentTime"
                android:textColor="@color/black"
                android:padding="2dp"
                />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2137.8"
            android:id="@+id/tvRate"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp"
            android:padding="2dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLOSE TRADE"
            android:textColor="@color/black"
            android:background="@color/orange"
            android:layout_marginHorizontal="10dp"
            android:padding="4dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Holding margin req:"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"
                android:padding="2dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="55582.8"
                android:id="@+id/tvHoldingMargin"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="2dp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>